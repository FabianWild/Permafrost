import subprocess

input_raster = "C:/Permafrost/Permafrost/Tiles/NE2_3571.tif"
output_directory = "C:/Permafrost/Permafrost/Tiles"

# Run gdal2tiles.py with options
cmd = [
    "C:/Users/Fabian/anaconda3/Lib/site-packages/GDAL-3.0.2-py3.9-win-amd64.egg/EGG-INFO/scripts/gdal2tiles.py",
    "-p", "raster",  # Specify the profile
    "--zoom", "3-8",  # Specify the zoom levels
    input_raster,  # Input raster file
    output_directory  # Output directory for tiles
]

subprocess.run(cmd)
